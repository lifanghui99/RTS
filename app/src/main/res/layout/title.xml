<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="44dp"
    android:background="@color/title_back_color"
    android:orientation="horizontal"
    >
    <TextView
        android:id="@+id/toolbar_tittle"
        style="@style/CommonText"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:background="@color/title_back_color"
        android:gravity="center_vertical"
        android:textColor="#ffffffff"
        />

    <ImageView
        android:id="@+id/toolbar_imgvStatus"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/toolbar_tvUnuploadmsg"
        android:background="@color/title_back_color"
        android:src="@drawable/down_up_normal" />

    <TextView
        android:id="@+id/toolbar_tvUnuploadmsg"
        style="@style/CommonText"
        android:layout_height="match_parent"

        android:layout_centerVertical="true"
        android:layout_marginRight="5dip"

        android:background="@color/title_back_color"
        android:textSize="18.0sp"
        android:gravity="center_vertical"
        android:textColor="#ffffffff"
        android:layout_alignParentRight="true"
 />

</RelativeLayout>