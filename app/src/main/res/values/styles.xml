<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="CommonText">
        <item name="android:textSize">17.0sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@android:color/black</item>
    </style>
    <style name="TagText" parent="@style/CommonText"></style>
    <style name="CommonEdit" parent="@style/CommonText">
        <item name="android:background">@drawable/edit_selector</item>
        <item name="android:padding">5.0dip</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:selectAllOnFocus">true</item>


    </style>

    <style name="CommonButton">
        <item name="android:textSize">18.0sp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:background">@drawable/button_selector</item>
        <item name="android:paddingLeft">15.0dip</item>
        <item name="android:paddingTop">5.0dip</item>
        <item name="android:paddingRight">15.0dip</item>
        <item name="android:paddingBottom">5.0dip</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="BottomBarButton" parent="@style/CommonButton">
        <item name="android:layout_width">0.0dip</item>
        <item name="android:layout_margin">4.0dip</item>
        <item name="android:layout_weight">1.0</item>
    </style>

</resources>
